# ==============================================
# APPLICATION SETTINGS
# ==============================================
# Modo debug (NUNCA use True em produção)
DEBUG=False

# Nível de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Ambiente: development, staging, production
ENVIRONMENT=production

# CORS - Origens permitidas (separadas por vírgula)
# Em produção, especifique os domínios permitidos
CORS_ORIGINS=*

# ==============================================
# LITELLM CONFIGURATION
# ==============================================
# Caminho para arquivo de configuração do LiteLLM
LITELLM_CONFIG_PATH=./litellm_config.yaml

# ==============================================
# MCP (Model Context Protocol) CONFIGURATION
# ==============================================
# Configurações para integrações MCP (Notion, etc)

# MCP_NOTION_TOKEN=your_notion_integration_token
# MCP_GOOGLE_CALENDAR_CREDENTIALS=path/to/credentials.json

# ==============================================
# MONITORING & OBSERVABILITY (OPTIONAL)
# ==============================================
# Configurações para monitoramento

# SENTRY_DSN=your_sentry_dsn
# PROMETHEUS_ENABLED=False
# METRICS_PORT=9090

# ==============================================
# PERFORMANCE TUNING
# ==============================================
# Número de workers do Uvicorn (recomendado: número de CPUs)
UVICORN_WORKERS=4

# Timeout em segundos para requisições
REQUEST_TIMEOUT=300

# Tamanho máximo de upload em MB
MAX_UPLOAD_SIZE=50

# ==============================================
# SECURITY
# ==============================================
# Limitar taxa de requisições (requests por minuto)
RATE_LIMIT_PER_MINUTE=60

# Permitir registros públicos (True/False)
ALLOW_PUBLIC_REGISTRATION=True

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
# Diretório para backups
BACKUP_DIR=./backups

# Retenção de backups em dias
BACKUP_RETENTION_DAYS=7

# ==============================================
# NOTAS DE CONFIGURAÇÃO
# ==============================================
# 
# 1. NUNCA commite o arquivo .env no Git
# 2. Use senhas fortes (mínimo 16 caracteres)
# 3. Em produção, use valores diferentes para cada ambiente
# 4. Gere SECRET_KEY aleatório: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 5. Para desenvolvimento local, você pode usar valores simples
# 6. Para produção, configure CORS_ORIGINS com domínios específicos
# 
# Exemplo de geração de senhas fortes:
# - SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(32))"
# - POSTGRES_PASSWORD: python -c "import secrets; print(secrets.token_urlsafe(24))"
# - REDIS_PASSWORD: python -c "import secrets; print(secrets.token_urlsafe(24))"

