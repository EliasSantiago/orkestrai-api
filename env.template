# ==============================================
# ORKESTRAI API - Environment Variables Template
# ==============================================
# Copie este arquivo para .env e configure com seus valores
# cp env.template .env

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_USER=agentuser
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_MIN_16_CHARS
POSTGRES_DB=agentsdb
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_INITDB_ARGS=--encoding=UTF8 --locale=C

# URL completa do banco (será construída automaticamente)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_MIN_16_CHARS

# URL completa do Redis (será construída automaticamente)
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# ==============================================
# API CONFIGURATION
# ==============================================
API_HOST=0.0.0.0
API_PORT=8001

# SECRET_KEY: Use um valor aleatório com mínimo 32 caracteres
# Gere com: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_MINIMUM_32_CHARS

# Algoritmo de criptografia para JWT
ALGORITHM=HS256

# Tempo de expiração do token JWT em minutos
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# LLM API KEYS
# ==============================================
# Google Gemini API Key
# Obtenha em: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key
# Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

